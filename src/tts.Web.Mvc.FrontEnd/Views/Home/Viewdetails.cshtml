        .flash-sale {
            display: inline-flex;
            align-items: center;
            background: linear-gradient(90deg, #ff4e00, #ff9500);
            color: white;
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 14px;
            margin-top: 12px;
        }

        .price {
            font-size: 28px;
            font-weight: 700;
            color: var(--primary-color);
        }

        .original-price {
            font-size: 18px;
            color: #6b7280;
            text-decoration: line-through;
            margin-left: 8px;
        }

        .discount-badge {
            background-color: var(--primary-color);
            color: white;
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 600;
            margin-left: 8px;
        }

        .quantity-control {
            display: flex;
            align-items: center;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            width: 150px;
            overflow: hidden;
        }

        .quantity-btn {
            background: #f3f4f6;
            border: none;
            width: 40px;
            height: 40px;
            font-size: 18px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
        }

            .quantity-btn:hover {
                background: #e5e7eb;
            }

        .quantity-input {
            width: 70px;
            text-align: center;
            border: none;
            font-size: 16px;
            font-weight: 500;
            -moz-appearance: textfield;
        }

            .quantity-input::-webkit-outer-spin-button,
            .quantity-input::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

        .buy-btn {
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 16px;
            font-size: 16px;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .buy-btn:hover {
                background-color: #b80014;
                transform: translateY(-2px);
            }

        .add-to-cart-btn {
            background-color: #3b82f6;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 16px;
            font-size: 16px;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            margin-top: 12px;
        }

            .add-to-cart-btn:hover {
                background-color: #2563eb;
                transform: translateY(-2px);
            }

        .info-section {
            margin-top: 24px;
            padding-top: 16px;
            border-top: 1px solid #e5e7eb;
        }

        .info-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 12px;
            color: #1f2937;
        }

        .info-list {
            list-style-type: none;
            padding-left: 0;
        }

            .info-list li {
                position: relative;
                padding-left: 20px;
                margin-bottom: 8px;
                color: #4b5563;
            }

                .info-list li:before {
                    content: "•";
                    position: absolute;
                    left: 0;
                    color: var(--primary-color);
                    font-weight: bold;
                }

        .delivery-note {
            display: block;
            text-align: center;
            margin-top: 8px;
            color: #6b7280;
            font-size: 14px;
        }

        media (max-width: 768px) {
            .product-grid

        {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .price {
            font-size: 24px;
        }

        .original-price {
            font-size: 16px;
        }

        }

        /* Animation for buttons */
        keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }

        }

        .buy-btn:hover, .add-to-cart-btn:hover {
            animation: pulse 1.5s infinite;
        }
    </style>
</head>
